<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Sample">

   <children>
      <!-- Текстовое поле для отображения инструкции -->
      <Text fx:id="textInstruction" fill="WHITE" layoutX="50.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Установите время будильника" textAlignment="CENTER" wrappingWidth="500.0">
         <font>
            <Font size="20.0" />
         </font>
      </Text>

      <!-- Текущее время / будильник -->
      <Text fx:id="textTime" fill="WHITE" layoutX="12.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00" textAlignment="CENTER" wrappingWidth="575.7366485595703">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <ImageView fx:id="gif1" fitHeight="141.0" fitWidth="346.0" layoutX="34.0" layoutY="239.0" pickOnBounds="true" preserveRatio="true" />

      <!-- Кнопка изменения часов -->
      <Button fx:id="btnH" layoutX="41.0" layoutY="239.0" mnemonicParsing="false" prefHeight="134.0" prefWidth="135.0" text="H">
         <font>
            <Font size="46.0" />
         </font>
      </Button>

      <!-- Кнопка изменения минут -->
      <Button fx:id="btnM" layoutX="239.0" layoutY="239.0" mnemonicParsing="false" prefHeight="134.0" prefWidth="135.0" text="M">
         <font>
            <Font size="46.0" />
         </font>
      </Button>

      <!-- Кнопка управления будильником -->
      <Button fx:id="btnA" layoutX="439.0" layoutY="239.0" mnemonicParsing="false" prefHeight="134.0" prefWidth="135.0" text="A">
         <font>
            <Font size="46.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
