<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller" prefWidth="300" prefHeight="200">
    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Введите строку:" />
        <TextField fx:id="inputField" promptText="Ваша строка" prefWidth="400" />
        <ComboBox fx:id="taskCombo" prefWidth="400" />
        <Button fx:id="checkButton" text="Проверить" onAction="#handleCheck" prefWidth="200" />
        <Label fx:id="resultLabel" text="" style="-fx-font-size: 14pt;" />
    </VBox>
</AnchorPane>
