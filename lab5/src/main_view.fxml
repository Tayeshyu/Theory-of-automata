<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>

<AnchorPane fx:controller="ElevatorAppController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: black;">

    <!-- Фон растягивается полностью -->
    <ImageView fx:id="backgroundImage"
               preserveRatio="false"
               AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               style="-fx-opacity: 1;" />

    <!-- Левый счётчик -->
    <Label fx:id="labelA"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"
           AnchorPane.leftAnchor="220"
           AnchorPane.topAnchor="45"/>

    <!-- Правый счётчик -->
    <Label fx:id="labelB"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"
           AnchorPane.leftAnchor="810"
           AnchorPane.topAnchor="60"/>

    <!-- Верхняя кнопка -->
    <Button fx:id="upButton"
            style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 16px; -fx-text-fill: white;"
            AnchorPane.leftAnchor="493"
            AnchorPane.topAnchor="507"/>

    <!-- Нижняя кнопка -->
    <Button fx:id="downButton"
            style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 16px; -fx-text-fill: white;"
            AnchorPane.leftAnchor="493"
            AnchorPane.topAnchor="567"/>

    <!-- Автоматический режим -->
    <CheckBox fx:id="autoModeCheckBox"
              text="Автоматическое движение"
              style="-fx-font-size: 14px; -fx-text-fill: white;"
              AnchorPane.leftAnchor="10"
              AnchorPane.bottomAnchor="40"/>

    <!-- Текущий этаж -->
    <Label fx:id="userFloorLabel"
           text="Этаж: 1"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"
           AnchorPane.leftAnchor="10"
           AnchorPane.bottomAnchor="10"/>
</AnchorPane>
